
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutInitalEmpty.cshtml";
}

<p class="login-box-msg">Sign in to start your session</p>
<form data-bind="submit: validateLogIn" id="logInForm">
    <div class="form-group has-feedback" data-bind="validationElement: elemObj.strEmail">
        <input data-bind='value: elemObj.strEmail, valueUpdate: "afterkeydown"' type="email" class="form-control" placeholder="Email">
        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
    </div>
    <div class="form-group has-feedback" data-bind="validationElement: elemObj.strPassword">
        <input data-bind='value: elemObj.strPassword, valueUpdate: "afterkeydown"' type="password" class="form-control" placeholder="Password">
        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
    </div>
    <div class="row">
        <div class="col-xs-8">
            <div class="checkbox icheck">
                <label>
                    <input data-bind="checked: elemObj.boolRememberMe" type="checkbox"> Remember Me
                </label>
            </div>
        </div>
        <!-- /.col -->
        <div class="col-xs-4">
            <button type="submit" data-bind="enable: elemObj.strEmail().length > 4 && elemObj.strPassword().length > 4 " class="btn btn-primary btn-block btn-flat">Sign In</button>
        </div>
        <!-- /.col -->
    </div>
</form>
<hr />
<!-- /.social-auth-links -->
<a href="/Login/forgetPassword/">I forgot my password</a><br>
